{
  "compilerOptions": {
    "target": "es6",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "typeAcquisition": {
    "include": ["jest"],
    "enable": true
  }
}
